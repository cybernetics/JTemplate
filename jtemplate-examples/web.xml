<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">
    <display-name>JTemplate Examples</display-name>

    <listener>
        <listener-class>org.jtemplate.examples.hibernate.HibernateSessionFactoryManager</listener-class>
    </listener>

    <listener>
        <listener-class>org.jtemplate.examples.mongodb.MongoClientManager</listener-class>
    </listener>

    <servlet>
        <servlet-name>PetServlet</servlet-name>
        <servlet-class>org.jtemplate.examples.mysql.PetServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>EventServlet</servlet-name>
        <servlet-class>org.jtemplate.examples.hibernate.EventServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>RestaurantServlet</servlet-name>
        <servlet-class>org.jtemplate.examples.mongodb.RestaurantServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>PetServlet</servlet-name>
        <url-pattern>/pets.html</url-pattern>
    </servlet-mapping>    

    <servlet-mapping>
        <servlet-name>EventServlet</servlet-name>
        <url-pattern>/events</url-pattern>
        <url-pattern>/events.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RestaurantServlet</servlet-name>
        <url-pattern>/restaurants.html</url-pattern>
    </servlet-mapping>
</web-app>

